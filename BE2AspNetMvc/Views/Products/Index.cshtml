@model IEnumerable<BE2AspNetMvc.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var item in Model)
    {



        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="card-img-top" alt="@Html.DisplayFor(modelItem => item.Name)">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text">@Html.ActionLink("Läs mer", "Details", new { id = item.Id })</p>

                    <div class="d-flex justify-content-between align-items-center">
                        <p class="price pt-2 text-danger">@Html.DisplayFor(modelItem => item.Price) SEK</p>
                        <button class="btn btn-success mt-3">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Beställ
                        </button>
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted"><i class="text-success me-2 fas fa-box"></i> lagerstatus</small>
                </div>
            </div>
        </div>

    }
</div>

   
